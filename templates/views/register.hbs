<!DOCTYPE html>
<html lang="en">
    <head>
    {{>headerlinks}}

    </head>
<body>
     {{>navbar}}
     <div style="background-image:url('images/vector-forest.jpg');  background-position:center;background-repeat: no-repeat;background-size: cover;height:100%">
    <div class="container mt-5">
  <h1 style="margin-left:16px">Register</h1>
  
  <div class="row" style="margin-top:10px">
    <div class="col-sm-5" >
      <div class="card">
        <div class="card-body" style="margin-bottom:20px">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group"style="margin-bottom:15px">
              <label for="email">Email</label>
              <input style="padding:15px"type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input style="padding:15px" type="password" class="form-control" name="password">
            </div>
            <button style="padding:5px" type="submit" class="btn btn-dark">Register</button>
          </form>
         

        </div>
      </div>
    </div>

     <div class="col-sm-4">
      <div class="card social-block">
        <div class="card-body">
          <a style="padding:10px"class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
           <div style="margin-left:30px">Sign Up with Google</div> 
          </a>
        </div>
      </div>
    </div> 

  </div>
  </div>
</div>
{{>footer}}
</body>
